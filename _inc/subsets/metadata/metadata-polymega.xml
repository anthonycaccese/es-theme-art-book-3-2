<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

   <include>./metadata-max.xml</include>

   <view name="detailed,video">

      <text name="system-name" extra="true">
         <visible>false</visible>
      </text>
      <textlist name="gamelist">
         <pos>1 1</pos>
      </textlist>

      <!-- Video & Screenshot -->
