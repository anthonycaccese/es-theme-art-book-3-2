         <pos>0.5 0.203125</pos>
         <size>1 1</size>
         <zIndex>1</zIndex>
      </video>
      <image name="md-media-mask" extra="true">
         <pos>0 0.40625</pos>
         <size>1 0.59375</size>
         <path>./_inc/images/metadata-polymega.svg</path>
      </image>

      <!-- Box Art & Marquee -->
      <image name="md_image">
         <origin>0.5 0</origin>
         <pos>0.145833333333333 0.46875</pos><!-- 70,150 -->
         <maxSize>0.208333333333333 0.4375</maxSize>
      </image>
